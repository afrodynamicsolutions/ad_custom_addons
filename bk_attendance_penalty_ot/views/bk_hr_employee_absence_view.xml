<!-- hr_employee_absence_form.xml -->
<odoo>
    <!-- Form View for Employee Absence -->
    <record id="view_hr_employee_absence_form" model="ir.ui.view">
        <field name="name">hr.employee.absence.form</field>
        <field name="model">hr.employee.absence</field>
        <field name="arch" type="xml">
            <form string="Employee Absence">
                <sheet>
                    <group>
                        <field name="employee_id" required="1"/>
                        <field name="absence_date" required="1"/>
                    </group>
                    <group>
                        <field name="absence_days"/>
                        <field name="absence_hours"/>
                        <field name="absence_minutes"/>
                    </group>
                    <group>
                        <field name="total_missed_hours"/>
                        <field name="total_deduction"/>
                    </group>
                    <group>
                        <field name="absent_report_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Employee Absence -->
    <record id="view_hr_employee_absence_tree" model="ir.ui.view">
        <field name="name">hr.employee.absence.tree</field>
        <field name="model">hr.employee.absence</field>
        <field name="arch" type="xml">
            <tree string="Employee Absence Records">
                <field name="employee_id"/>
                <field name="absence_date"/>
                <field name="absence_days"/>
                <field name="absence_hours"/>
                <field name="absence_minutes"/>
                <field name="total_missed_hours"/>
            </tree>
        </field>
    </record>

    <!-- Action for Absence Records -->
    <record id="action_hr_employee_absence" model="ir.actions.act_window">
        <field name="name">Employee Absences</field>
        <field name="res_model">hr.employee.absence</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click to record employee absences.</p>
        </field>
    </record>

    <!-- Menu Item for Absence Records -->
    <menuitem id="menu_hr_employee_absence_attendance"
              name="Attendance and OT"
              parent="hr.menu_hr_root"
              sequence="20"/>

    <menuitem id="menu_hr_employee_absence"
              name="Employee Absence"
              parent="menu_hr_employee_absence_attendance"
              action="action_hr_employee_absence"
              sequence="1"/>
</odoo>
